{
  "$comment": "Mount plan with agents - demonstrates sub-agent spawning via tool-task",
  "session": {
    "orchestrator": "loop-basic",
    "context": "context-simple"
  },
  "providers": [
    {
      "module": "provider-anthropic",
      "config": {
        "model": "claude-sonnet-4-5"
      }
    }
  ],
  "tools": [
    {
      "module": "tool-task",
      "config": {
        "max_concurrent": 3,
        "timeout": 300
      }
    },
    {
      "module": "tool-echo",
      "config": {
        "prefix": "[Main] "
      }
    }
  ],
  "hooks": [],
  "agents": {
    "researcher": {
      "description": "Research agent for gathering information",
      "tools": [
        {
          "module": "tool-filesystem",
          "config": {
            "allowed_paths": ["."],
            "read_only": true
          }
        }
      ]
    },
    "writer": {
      "description": "Writing agent for creating content",
      "providers": [
        {
          "module": "provider-anthropic",
          "config": {
            "model": "claude-sonnet-4-5",
            "max_tokens": 4096
          }
        }
      ],
      "tools": [
        {
          "module": "tool-filesystem",
          "config": {
            "allowed_paths": ["./output"]
          }
        }
      ]
    },
    "analyzer": {
      "description": "Analysis agent for processing data",
      "session": {
        "orchestrator": "loop-basic",
        "context": "context-simple"
      },
      "tools": [
        {
          "module": "tool-echo",
          "config": {
            "prefix": "[Analyzer] "
          }
        }
      ]
    }
  }
}
